<form id="contact-form" method="POST" action="/" role="form">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputParentFirstName4">Parent's First Name</label>
      <input type="text" class="form-control" id="inputParentFirstName4" name="inputParentFirstName4" placeholder="Parent's First Name">
    </div>
    <div class="form-group col-md-6">
      <label for="inputParentLastName4">Parent's Last Name</label>
      <input type="text" class="form-control" id="inputParentLastName4" name="inputParentLastName4 placeholder="Parent's Last Name">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputStudentFirstName4">Student's First Name</label>
      <input type="text" class="form-control" id="inputStudentFirstName4" name="inputStudentFirstName4" placeholder="Student's First Name">
    </div>
    <div class="form-group col-md-6">
      <label for="inputStudentLastName4">Student's Last Name</label>
      <input type="text" class="form-control" id="inputStudentLastName4" name="inputStudentLastName4" placeholder="Student's Last Name">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Email</label>
      <input type="email" class="form-control" id="inputEmail4" name="inputEmail4" placeholder="Email">
    </div>
    <div class="form-group col-md-6">
      <label for="phone4">Phone Number</label>
      <input type="tel" class="form-control" id="phone4" name="phone4" placeholder="xxx-xxx-xxxx">
    </div>
  </div>
  <div class="form-row">
      <div class="form-group col-md-6">
        <label for="grade4">Grade</label>
        <select class="form-control" id="grade4" name="grade4">
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
          <option>10</option>
          <option>11</option>
          <option>12</option>
        </select>
      </div>
      <div class="form-group col-md-6">
        <label for="inputMathSubject4">Math Subject</label>
        <input type="text" class="form-control" id="inputMathSubject4" name="inputMathSubject4" placeholder="Math Subject">
      </div>
  </div>
  <div class="form-group">
    <label for="inputDetails4">Details and Availibility</label>
    <input type="text" class="form-control" id="inputDetails4" name="inputDetails4" placeholder="Details and Availbility">
  </div>

  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        I am not a robot.
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
