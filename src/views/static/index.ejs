      <!-- Page Content -->
      <main class="container">
        <% include ../static/partials/messages.ejs %>
        <!--  Header -->
        <header class="row centered-form center-block text-center">
          <section id="logo" class="container col-md-12 col-md-offset-1 bg-white border border-white rounded p-3 mb-2 text-info">

          <div>
            <picture>
              <source media="(max-width: 576px)"
                      srcset="pictures/cover_white.png" alt="Mary Tutors Math Logo">
              <source media="(max-width: 922px)"
                      srcset="pictures/cover_white.png" alt="Mary Tutors Math Logo">
              <source media="(min-width: 923px)"
                      srcset="pictures/cover_white.png" alt="Mary Tutors Math Logo">
